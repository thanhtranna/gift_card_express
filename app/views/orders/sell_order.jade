extends ../layouts/default

block main
    h1= title

block content
    - if ( sellOrders.length )
        h3 List order
            div
                table.table.table-striped
                    thead
                        th STT
                        th Custommer
                        th Price order
                        th Time
                        th Action
                    tbody
                        -each item, i in sellOrders
                            tr
                                td= i
                                td= item.user.name
                                td= item.price
                                td= item.createdAt
                                td
                                    button.btn.btn-info(type="button") Sell
    - else
        h3 No order