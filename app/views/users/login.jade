extends auth

block auth
  form.form-horizontal.form-signin(action="/users/session", method="post", role="form")
    input(type="hidden", name="_csrf", value="#{csrf_token}")

    p.col-sm-offset-2.error= message

    input#email.form-control(type="email", placeholder="Please enter email", name="email")
    br
    input#password.form-control(type="password", placeholder="Please enter password", name="password")

    br
    button.btn.btn-primary.btn-block(type="submit") Log in
    br
    div.text-center
      a(href='/signup') Create account
      | &nbsp;or &nbsp;
      a(href='/forgot') Forgot password?