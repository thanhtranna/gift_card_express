extends ../layouts/default

block main
    h1= title

block content
    //- if (req.isAuthenticated())
    //    h3
    //        a(href="/giftcards/new") Create new gift card

    - if (giftcards.length)
        - console.log(giftcards)
        - each item in giftcards
            h3
                a(href="/giftcards/#{item._id}")  #{item.name}
            h5= item.description
            - if (item.user)
                span Poster: &nbsp;
                - var name = item.user.name ? item.user.name : item.user.username
                a(href="/users/" + item.user._id)= name
            h4
                //a.btn.btn-success(href='/add-to-cart/'+item._id) Add to Shopping Cart
                button.btn.btn-danger.my-cart-btn(data-id=item._id, data-name=item.category.name, data-summary='summary 5', data-price=item.maxPrice, data-quantity='1', data-image='') Add to Cart
    - else
        - if(req.isAuthenticated())
            h4.muted No Giftcard.&nbsp;
                a(href="/giftcards/new") Create one